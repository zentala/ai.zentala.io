---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'

const { title, subtitle, name, email, phone } = Astro.props

const heroProps = {
  title: 'Contact',
  subtitle: 'I have time for you. Contact me.',
}
---

<Layout title="Portfolio">
  <Hero {...heroProps} />
  <main class="bg-slate-200">
    <div class="container mx-auto pt-16 pb-16 px-4">
      <!-- <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8"> -->
      <!-- <section class="p-12"> -->
      <div class="flex justify-between">
        <div class="w-1/3 pr-8">
          <h2 class="text-4xl font-bold mb-4">Let's Talk</h2>
          <p class="mb-6 text-xl pr-16">
            Fell free to contact me. <br />I am always ready to help you.
          </p>
          <div class="flex items-center mb-4">
            <img
              src="https://avatars.githubusercontent.com/u/7286123?v=4"
              alt="Paweł Żentała"
              class="w-24 h-24 rounded-full mr-4"
            />
            <div>
              <h3 class="text-2xl font-semibold">Paweł Żentała</h3>
              <p class="mt-1">
                <a href="mailto:zentala@gmail.com">zentala@gmail.com</a>
              </p>
              <a href="tel:+48517178984">+48 517 17 89 84</a>
            </div>
          </div>
        </div>
        <div class="w-2/3">
          <div class="bg-white p-8 rounded-xl shadow-md">
            <form class="grid grid-cols-2 gap-8">
              <div>
                <label
                  for="firstName"
                  class="block text-sm font-medium leading-6 text-gray-700"
                  >First Name</label
                >
                <input
                  type="text"
                  id="firstName"
                  class="mt-1 block py-2 px-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
              <div>
                <label
                  for="lastName"
                  class="block text-sm font-medium leading-6 text-gray-700"
                  >Last Name</label
                >
                <input
                  type="text"
                  id="lastName"
                  class="mt-1 block py-2 px-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium leading-6 text-gray-700"
                  >Email</label
                >
                <input
                  type="email"
                  id="email"
                  class="mt-1 block py-2 px-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium leading-6 text-gray-700"
                  >Telefon</label
                >
                <input
                  type="tel"
                  id="phone"
                  class="mt-1 block py-2 px-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
              <div class="col-span-2">
                <label
                  for="message"
                  class="block text-sm font-medium leading-6 text-gray-700"
                  >Message</label
                >
                <textarea
                  id="message"
                  rows="4"
                  class="mt-1 block py-2 px-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                ></textarea>
              </div>
              <div class="col-span-2">
                <label class="block text-sm font-medium leading-6 text-gray-700"
                  >Attachment</label
                >
                <input
                  type="file"
                  class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                />
              </div>
              <div class="col-span-2 text-right">
                <button
                  type="submit"
                  class="pt-3 pb-4 px-8 bg-blue-500 text-2xl text-white rounded-full shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                >
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- </div> -->
  </main>
</Layout>
