---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'

const heroProps = {
  title: 'Contact',
  subtitle: 'I have time for you. Contact me.',
}
---

<Layout title="Portfolio">
  <Hero {...heroProps} />
  <main class="border-y border-gray-800 bg-black text-white">
    <div class="container mx-auto pt-16 pb-16 px-4 border-x border-gray-800">
      <!-- <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8"> -->
      <!-- <section class="p-12"> -->
      <div class="flex justify-between">
        <div class="w-1/3 p-16 pr-0">
          <h2 class="text-4xl font-bold mb-4">Let's Talk</h2>
          <p class="mb-6 text-xl pr-16">
            Fell free to contact me. <br />I am always ready to help you.
          </p>
          <div class="flex items-center mb-4">
            <img
              src="https://avatars.githubusercontent.com/u/7286123?v=4"
              alt="Paweł Żentała"
              class="w-24 h-24 rounded-full mr-4"
            />
            <div>
              <h3 class="text-2xl font-semibold">Paweł Żentała</h3>
              <p class="mt-1">
                <a href="mailto:zentala@gmail.com">zentala@gmail.com</a>
              </p>
              <a href="tel:+48517178984">+48 517 17 89 84</a>
            </div>
          </div>
        </div>
        <div class="w-2/3">
          <div class="p-16 py-8">
            <form class="grid grid-cols-2 gap-12 gap-y-6">
              <label class="form-control w-full">
                <div class="label">
                  <span class="label-text">First name</span>
                </div>
                <input
                  type="text"
                  id="firstName"
                  placeholder=""
                  class="input input-bordered w-full"
                />
              </label>

              <label class="form-control w-full">
                <div class="label">
                  <span class="label-text">Last Name</span>
                </div>
                <input
                  type="text"
                  id="lastName"
                  id="firstName"
                  placeholder=""
                  class="input input-bordered w-full"
                />
              </label>

              <label class="form-control w-full">
                <div class="label">
                  <span class="label-text">Email</span>
                </div>
                <input
                  type="email"
                  id="email"
                  placeholder=""
                  class="input input-bordered w-full"
                />
              </label>

              <label class="form-control w-full">
                <div class="label">
                  <span class="label-text">Email</span>
                </div>
                <input
                  type="tel"
                  id="phone"
                  placeholder=""
                  class="input input-bordered w-full"
                />
              </label>

              <div class="col-span-2">
                <label class="form-control">
                  <div class="label">
                    <span class="label-text">Message</span>
                  </div>
                  <textarea
                    class="textarea textarea-bordered h-24"
                    placeholder="Your message"></textarea>
                </label>
              </div>
              <div class="col-span-2">
                <input
                  type="file"
                  class="file-input file-input-bordered file-input-sm w-full max-w-xs"
                />
              </div>
              <div class="col-span-2 text-right">
                <button type="submit" class="btn"> Send Message </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- </div> -->
  </main>
</Layout>
