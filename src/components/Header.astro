---
import Logo from '../components/Logo.astro'
const headerLogoProps = {
  link: '/',
  color: '#fff',
  type: 'full',
  height: '40px',
  width: '200px',
  alt: 'Żentała',
}

const links = [
  { href: '/', text: 'Home' },
  // { href: '/mission', text: 'Mission' },
  // { href: '/about', text: 'About' },
  { href: '/offer', text: 'Offer' },
  // { href: '/faq', text: 'FAQ' },
  { href: '/portfolio', text: 'Portfolio' },
  { href: '/blog', text: 'Blog' },
  { href: '/contact', text: 'Contact' },
]
---

<div class="h-20 bg-black"></div>

<header
  id="header"
  class="bg-black shadow-md border-b border-gray-800 backdrop-blur bg-opacity-90 fixed top-0 w-full z-50 transition-all duration-300"
>
  <div
    class="container mx-auto px-16 py-6 flex justify-between items-center max-w-8xl border-gray-800 border-x"
  >
    <div class="flex items-center">
      <a href="/">
        <Logo {...headerLogoProps} />
        <span class="text-xl ml-4 text-white">Innovation Agency</span>
      </a>
    </div>
    <nav class="flex space-x-6 text-lg">
      {
        links.map((link) => (
          <a href={link.href} class="text-white hover:text-gray-400">
            {link.text}
          </a>
        ))
      }
    </nav>
  </div>
</header>

<style>
  header {
    /* background: #13151a;
        background-size: 224px; */
  }
</style>

<script>
  window.addEventListener('scroll', function () {
    const header = document.querySelector('#header .container')
    if (!header) return
    if (window.scrollY > 50) {
      header.classList.add('py-4')
      header.classList.remove('py-6')
    } else {
      header.classList.add('py-6')
      header.classList.remove('py-4')
    }
  })
</script>
